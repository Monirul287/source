import random
from datetime import datetime

charset = "0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ"



def get_random_image_source():
    # List of example image URLs
    image_sources = [
        "https://raw.githubusercontent.com/beliia/pto/main/mgpl.png",

    ]
    return random.choice(image_sources)


def get_random_image_source_2():
    # List of example image URLs
    image_sources = [
        "https://raw.githubusercontent.com/jhossain1509/1809/refs/heads/main/8884535903.jpg",

        # Add more image URLs here if needed
    ]
    # Ensure that image_source_2 is different from image_source
    return random.choice([source for source in image_sources if source != get_random_image_source()])


def get_html_template(helpline_number, email):
    today_date_string = datetime.now().strftime("%A, %B %d, %Y")
